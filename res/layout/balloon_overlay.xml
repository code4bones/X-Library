<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="horizontal" 		
	android:id="@+id/balloon_main_layout"
	android:paddingBottom="35dp"	
>
	<RelativeLayout 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/balloon_overlay_bg_selector" 
		android:paddingTop="10dp" 
		android:paddingLeft="15dp"		
		android:paddingRight="15dp"		
		android:paddingBottom="15dp"		
		android:id="@+id/balloon_inner_layout"
	>
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/balloon_item_icon"
			android:visibility="gone"			
		/>				
				
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"			
			android:id="@+id/balloon"
			android:gravity="top"
			android:layout_gravity="top"
			android:layout_toRightOf="@+id/balloon_item_icon"
		>			
			<TextView 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:id="@+id/balloon_item_title"				
				android:textSize="16dip"
				android:textColor="#FF000000"
				android:visibility="gone"
				android:text="Title"
			/>
			<TextView 
				android:layout_height="wrap_content" 				
				android:layout_width="wrap_content" 
				android:id="@+id/balloon_item_snippet"
				android:textSize="12dip" 
				android:textColor="#FF000000"
				android:singleLine="false"				
				android:gravity="top"
				android:layout_gravity="top"	
				android:visibility="gone"
				android:text="Text Snippet"			
			/>			
		</LinearLayout>		
		
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/chevron"
			android:id="@+id/arrow"
			android:visibility="gone"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/balloon"
			android:layout_marginLeft="10dp"
		/>	
	</RelativeLayout>	
</FrameLayout>
